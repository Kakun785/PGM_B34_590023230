#include <stdio.h>

int main() {
    int rows[] = {1, 3, 5, 7, 5, 3, 1};
    int n = sizeof(rows) / sizeof(rows[0]);
    int max = 7;  // widest row (from the screenshot)

    for (int i = 0; i < n; i++) {
        int stars = rows[i];
        int spaces = (max - stars) / 2;

        for (int s = 0; s < spaces; s++)
            printf(" ");
        for (int j = 0; j < stars; j++)
            printf("*");

        printf("\n");
    }

    return 0;
}
