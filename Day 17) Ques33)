
#include <stdio.h>
#include <math.h>

int main() {
    int number, original, sum = 0, digits = 0, temp, remainder;

    
    printf("Enter a number: ");
    scanf("%d", &number);

    original = number;
    temp = number;

   
    while (temp != 0) {
        temp = temp / 10;
        digits++;
    }

    temp = number;

   
    while (temp != 0) {
        remainder = temp % 10;
        sum += pow(remainder, digits);
        temp = temp / 10;
    }

    // Check if Armstrong
    if (sum == original) {
        printf("%d is an Armstrong number.\n", original);
    } else {
        printf("%d is not an Armstrong number.\n", original);
    }

    return 0;
}
