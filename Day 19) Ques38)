#include <stdio.h>

int main() {
    int number, sum = 0, remainder;

    
    printf("Enter a number: ");
    scanf("%d", &number);

    
    if (number < 0) {
        number = -number;
    }

    
    while (number > 0) {
        remainder = number % 10;  // Get last digit
        sum += remainder;         // Add it to sum
        number = number / 10;     // Remove last digit
    }

    
    printf("Sum of digits is: %d\n", sum);

    return 0;
}

