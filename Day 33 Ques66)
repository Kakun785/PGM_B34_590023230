#include <stdio.h>

int main() {
    int n, arr[100], element, i;

    printf("Enter number of elements (sorted): ");
    scanf("%d", &n);

    printf("Enter %d sorted elements: ", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter element to insert: ");
    scanf("%d", &element);

    // Start from the last element and shift elements
    i = n - 1;
    while (i >= 0 && arr[i] > element) {
        arr[i + 1] = arr[i];   // shift right
        i--;
    }

    // Insert element at the correct position
    arr[i + 1] = element;
    n++;  // increase size

    // Print result
    printf("Array after insertion: ");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
