
#include <stdio.h>

int main(){




    float length ,width ,area, perimeter;
    printf("enter the value of  l : ");
    scanf("%f", &length);
    printf("enter the value of  b :");
    scanf("%f", &width);
    
    area = length * width;
    perimeter= 2*(length + width);
    printf("Area of a rectangle is %.2f\n", area);
    scanf("Area of a perimeter is %.2f\n", perimeter);
    
    
    
    return 0;
}














   
   
